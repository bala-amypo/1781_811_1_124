<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Supplier Diversity Tracker Test Suite" verbose="1" parallel="false">

    <!-- Listener (same as @Listeners annotation, kept for safety) -->
    <listeners>
        <listener class-name="com.example.demo.TestResultListener"/>
    </listeners>

    <test name="All Supplier Diversity Tracker Tests">

        <!-- Run all groups -->
        <groups>
            <run>
                <include name="servlet"/>
                <include name="crud"/>
                <include name="di"/>
                <include name="hibernate"/>
                <include name="jpa"/>
                <include name="many"/>
                <include name="security"/>
                <include name="hql"/>
            </run>
        </groups>

        <classes>
            <class name="com.example.demo.SupplierDiversityTrackerTest"/>
        </classes>

    </test>

</suite>